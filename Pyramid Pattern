#include<stdio.h>

void pyramid(int n){
    
    for(int i=1; i<=n ; i++){
        for(int j=1; j<= n-i ; j++){
            printf(" ");
        }
        for(int j=1; j<=i ; j++){
            printf("* ");
        }
        printf("\n");
    }
}

int main(){
    
    int n;
    printf("Enter a number : ");
    scanf("%d", &n);
    pyramid(n);
    
    return 0;
}
