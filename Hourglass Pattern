#include<stdio.h>
void hourglass_pattern(int n){
    printf("\n");
    for(int i=n; i>=1 ; i--){
        for(int j=1; j<= n-i ; j++){
            printf(" ");
        }
        for(int j=1; j<=i ; j++){
            printf("* ");
        }
        printf("\n");
    }
    for(int i=1; i<=n ; i++){
        for(int j=1; j<= n-i ; j++){
            printf(" ");
        }
        for(int j=1; j<=i ; j++){
            printf("* ");
        }
        printf("\n");
    }
}
int main(){
    int n = 6;
    hourglass_pattern(n);
    return 0;
} 
